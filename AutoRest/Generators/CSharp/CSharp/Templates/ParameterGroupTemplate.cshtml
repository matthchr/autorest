@using Microsoft.Rest.Generator
@using Microsoft.Rest.Generator.CSharp
@using Microsoft.Rest.Generator.CSharp.Templates
@using Microsoft.Rest.Generator.Utilities
@inherits Microsoft.Rest.Generator.Template<Microsoft.Rest.Generator.CSharp.ParameterGroupTemplateModel>
@Header("// ")
@EmptyLine
namespace @(Settings.Namespace).Models
{
    using System;

@EmptyLine
    /// <summary>
    @WrapComment("/// ", Model.Documentation.EscapeXmlComment())
    /// </summary>
    public partial class @(Model.ParameterGroupType)
    {
        /// <summary>
        @WrapComment("/// ", ("Initializes a new instance of the " + Model.ParameterGroupType + " class.").EscapeXmlComment())
        /// </summary>
        @foreach (var parameter in Model.GroupedParameters)
        {
        @:/// <param name='@(CodeNamer.CamelCase(parameter.Name))'>
        @:@WrapComment("/// ", parameter.Documentation.EscapeXmlComment())
        @:/// </param>
        }
        public @(Model.ParameterGroupType)(@(Model.ConstructorParameters))
        {
        @foreach(var parameter in Model.GroupedParameters)
        {
            @:@(parameter.Name) = @(CodeNamer.CamelCase(@parameter.Name));
        }
        }
        @EmptyLine
        @foreach (var parameter in Model.GroupedParameters)
        {
        @:/// <summary>
        @:@WrapComment("/// ", parameter.Documentation.EscapeXmlComment())
        @:/// </summary>
        @:public @(parameter.ToString())
        @EmptyLine
        }
    }
}
